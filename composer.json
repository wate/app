{
    "name": "cakephp/app",
    "description": "CakePHP skeleton app",
    "homepage": "https://cakephp.org",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "3.6.*",
        "cakephp/migrations": "^2.0.0",
        "cakephp/plugin-installer": "^1.0",
        "dereuromark/cakephp-tools": "^1.5",
        "josegonzalez/cakephp-upload": "^4.0",
        "josegonzalez/dotenv": "3.*",
        "maiconpinto/cakephp-adminlte-theme": "^1.0",
        "mobiledetect/mobiledetectlib": "2.*"
    },
    "require-dev": {
        "cakephp/bake": "^1.1",
        "cakephp/cakephp-codesniffer": "^3.0",
        "cakephp/debug_kit": "^3.15",
        "dereuromark/cakephp-ide-helper": "^0.12",
        "league/factory-muffin": "^3.0",
        "league/factory-muffin-faker": "^2.0",
        "phpmetrics/phpmetrics": "^2.4",
        "phpstan/phpstan": "^0.10",
        "psy/psysh": "@stable"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "test": "echo 'Run execute test command here'",
        "doc": "echo 'Run generate document command here'",
        "cs-check": "phpcs --colors -p -s --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/",
        "analyse": "phpstan analyse --level 5 --no-progress src/",
        "prepare-check": "mkdir -p output",
        "check": [
            "@prepare-check",
            "@test",
            "@cs-check",
            "@analyse"
        ],
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/",
        "metrics": "phpmetrics src/ --report-html=output/metrics"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
